<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:fitsSystemWindows="true"
    tools:context=".Activities.TempFormActivity">
    <android.support.design.widget.NavigationView
        android:id="@+id/temp_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:menu="@menu/temp_drawer_menu"
        app:itemTextColor="@color/menu_text_color"
        app:itemBackground="@drawable/rounded_menu_background"
        app:itemIconTint="@color/menu_text_color"
        app:headerLayout="@layout/temp_navigation_header"/>
</android.support.v4.widget.DrawerLayout>