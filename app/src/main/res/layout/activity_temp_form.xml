<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/temp_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TempFormActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="To"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <AutoCompleteTextView
            android:layout_margin="5dp"
            android:id="@+id/temp_to_text_view"
            android:padding="5dp"
            android:background="@drawable/rounded_corner_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="Feedback"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/temp_feedback_edit_text"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:hint="Enter Feedback"
        android:background="@drawable/rounded_corner_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:text="Actions Taken"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/temp_actions_edit_text"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:hint="Enter Actions Taken"
        android:background="@drawable/rounded_corner_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/temp_send_button"
        android:textStyle="bold"
        android:text="@string/main_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="end"
        android:background="@color/colorGreenDark"
        android:padding="15dp"
        android:layout_margin="15dp"/>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:id="@+id/temp_navigation_view"
        app:menu="@menu/temp_drawer_menu"
        app:headerLayout="@layout/temp_navigation_header"/>
</android.support.v4.widget.DrawerLayout>